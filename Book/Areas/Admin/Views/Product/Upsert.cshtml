@model Book.Models.ViewModels.ProductVM

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="fw-bold m-0">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
                </div>
                <div class="card-body bg-dark">
                    <form method="post" enctype="multipart/form-data">
                        <input asp-for="Product.Id" hidden />
                        <input asp-for="Product.ImageURL" hidden />
                        <div class="row">
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label asp-for="Product.Title" class="form-label fw-bold">Title</label>
                                    <input asp-for="Product.Title" class="form-control shadow-sm" />
                                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Product.Description" class="form-label fw-bold">Description</label>
                                    <textarea asp-for="Product.Description" class="form-control shadow-sm" rows="4"></textarea>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Product.Author" class="form-label fw-bold">Author</label>
                                    <input asp-for="Product.Author" class="form-control shadow-sm" />
                                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Product.ISBN" class="form-label fw-bold">ISBN</label>
                                    <input asp-for="Product.ISBN" class="form-control shadow-sm" />
                                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Product.Price" class="form-label fw-bold">Price</label>
                                    <input asp-for="Product.Price" class="form-control shadow-sm" />
                                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Product.Price50" class="form-label fw-bold">Price for 50+</label>
                                    <input asp-for="Product.Price50" class="form-control shadow-sm" />
                                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Product.Price100" class="form-label fw-bold">Price for 100+</label>
                                    <input asp-for="Product.Price100" class="form-control shadow-sm" />
                                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Category</label>
                                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-select shadow-sm">
                                        <option disabled selected>--Select Category--</option>
                                    </select>
                                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Upload Image</label>
                                    <input type="file" name="file" class="form-control shadow-sm" />
                                    <span asp-validation-for="Product.ImageURL" class="text-danger"></span>
                                </div>
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary shadow">
                                        @(Model.Product.Id != 0 ? "Update" : "Create")
                                    </button>
                                    <a class="btn btn-secondary shadow" asp-area="Admin" asp-controller="Product" asp-action="Index">
                                        Back to List
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="border rounded shadow-sm p-3 bg-light">
                                    <h5 class="text-muted">Product Image</h5>
                                    <img src="@Model.Product.ImageURL" class="img-fluid rounded bg-dark-subtle"  />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
